generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Applicant {
  id        Int       @id @default(autoincrement())
  appNo     String    @unique
  firstName String
  surname   String
  status    Status    @default(PENDING)
  startTime DateTime?
  endTime   DateTime?
  score     Float?

  answers ApplicantAnswer[]
  token   Token?            @relation(fields: [tokenId], references: [id], onDelete: SetNull)
  tokenId Int?              @unique
}

model Token {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  tokenType TokenType
  used      Boolean   @default(false)

  applicant Applicant?
  createdAt DateTime   @default(now())
}

model Test {
  id                 Int      @id @default(autoincrement())
  isActive           Boolean  @default(false) // Whether the test is currently enabled
  questionCount      Int      @default(30) // Number of questions in the test
  instructions       String   @default("Please read the instructions carefully before starting.")
  durationMinutes    Int      @default(60) // Duration of test in minutes
  instructionMinutes Int      @default(2) // Duration to read instructions (in minutes)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Question {
  id            Int          @id @default(autoincrement())
  tokenType     TokenType
  tokenId       Int?         @unique
  question      String
  questionType  QuestionType @default(objective)
  options       Json
  correctOption Json
  marks         Int?         @default(1)

  answers ApplicantAnswer[]
}

model ApplicantAnswer {
  id          Int       @id @default(autoincrement())
  applicant   Applicant @relation(fields: [applicantId], references: [id], onDelete: Cascade)
  applicantId Int
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId  Int
  selected    Json?
  isCorrect   Boolean?
}

enum TokenType {
  english
  arabic
}

enum QuestionType {
  objective
  multiChoice
}

enum Status {
  PENDING
  IN_PROGRESS
  DONE
}
